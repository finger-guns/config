[includeIf "gitdir:~/projects/Work/"]
  path = ~/projects/Work/.gitconfig

[includeIf "gitdir:~/projects/Personal/"]
  path = ~/projects/Personal/.gitconfig

; [includeIf "gitdir:~/.bin/hooks"]
;     path = ~/projects/Work/.gitconfig


[core]
    excludesFile = $HOME/.dots/gitignore
    editor = vim
    whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol
    excludesfile = ~/.gitignore
    hooksPath = ~/.bin/hooks

[web]
    browser = firefox

[color]
    ui = auto

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
[color "status"]
    added = yellow
    changed = green
    untracked = cyan

[alias]
    # List all aliases.
    la = "!git config -l | grep alias | cut -c 7-"

    # Shortening aliases
    co = checkout
    cob = checkout -b
    f = fetch -p
    c = commit
    amend = commit -a --amend

    p = push
    ba = branch -a
    bd = branch -d
    bD = branch -D
    dc = diff --cached

    # Feature improving aliases
    st = status -sb
    a = add -p
    aa = add --all

    # Complex aliases
    # LOGS
    plog = log --graph --pretty='format:%C(red)%d%C(reset) %C(yellow)%h%C(reset) %ar %C(green)%aN%C(reset) %s'
    tlog = log --stat --since='1 Day Ago' --graph --pretty=oneline --abbrev-commit --date=relative
    lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
    ll = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate

    # DIFFS
    dlc = diff --cached HEAD^

    rank = shortlog -sn --no-merges
    bdm = "!git branch --merged | grep -v '*' | xargs -n 1 git branch -d"

    # Revert to last commit, throw all current changes to "SAVEPOINT" and not
    # commit it
    wipe = !git add -A && git commit -qm 'WIPE SAVEPOINT' && git reset HEAD~1 --hard

    # Closer to mercurial commands ??
    shelve = stash push --include-untracked
    unshelve = stash pop

[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool "sourcetree"]
	cmd = /Applications/Sourcetree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
[init]
	defaultBranch = main

